# 完整的装饰器测试

# 多个装饰器
@property
@classmethod
定义 多装饰器函数(cls):
    返回 "多个装饰器"

# 装饰类 
@property
类 装饰类:
    定义 魔法初始化(自己):
        自己.名字 赋值为 "测试"

# 普通类中的装饰方法
类 人:
    定义 魔法初始化(自己, 名字):
        自己.名字 赋值为 名字
    
    @property
    定义 介绍(自己):
        返回 f"我是{自己.名字}"
    
    @staticmethod
    定义 问候():
        返回 "大家好！"
    
    @classmethod
    定义 创建默认(cls):
        返回 cls("默认人")

# 测试调用
张三 = 人("张三")
打印(张三.介绍)
打印(人.问候())

默认人 = 人.创建默认()
打印(默认人.介绍)
